        android:visibility="gone"
        android:id="@+id/linearLayoutTimeDialog5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutTimeDialog4"
        android:weightSum="3.5"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTimeDialogSelectTime5"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/light_orange"
            android:text="5th Dose"
            android:fontFamily="@font/proxima_nova_medium"
            android:textSize="16sp"
            app:cornerRadius="8dp"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/txtTimeDialogSelectedTime5"
            android:layout_weight="2.0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text = "Selected Time"
            android:textSize="18sp"
