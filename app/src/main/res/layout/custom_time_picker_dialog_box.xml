            android:textSize="18sp"
            android:fontFamily="@font/proxima_nova_regular"
            android:gravity="center_vertical"
            />

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linearLayoutTimeDialog4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutTimeDialog3"
        android:weightSum="3.5"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTimeDialogSelectTime4"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/light_orange"
            android:text="4th Dose"
            android:fontFamily="@font/proxima_nova_medium"
            android:textSize="16sp"
            app:cornerRadius="8dp"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/txtTimeDialogSelectedTime4"
            android:layout_weight="2.0"
