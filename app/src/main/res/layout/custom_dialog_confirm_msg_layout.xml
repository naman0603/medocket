<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/proxima_nova_bold"
        android:text="Reminder"
        android:textAlignment="center"
        android:textSize="22sp"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieDialogView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="25dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_below="@id/textView"
        app:lottie_url="https://lottie.host/809c23a8-ebe7-4cea-a5d7-d30809bc3dc1/cYgubSWBxg.json" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linearLayoutDialog2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/linearLayoutDialog1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time :-"
            android:textSize="22sp"
            android:fontFamily="@font/proxima_nova_bold"
            />
        <TextView
            android:id="@+id/txtDialogTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"

            android:text="Title :- "
            android:textSize="20sp"
            android:fontFamily="monospace"
            />

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linearLayoutDialog1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/linearLayoutDialog3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dates :-"
            android:textSize="22sp"
            android:fontFamily="@font/proxima_nova_bold"
            />
        <TextView
            android:id="@+id/txtDialogDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Title :- "
            android:textSize="20sp"
            android:fontFamily="monospace"
            />

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linearLayoutDialog3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/lottieDialogView">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medicine Name :-"
            android:textSize="22sp"
            android:fontFamily="@font/proxima_nova_bold"
            />
        <TextView
            android:id="@+id/txtDialogMedicineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Title :- "
            android:textSize="20sp"
            android:fontFamily="monospace"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lottieDialogView"
        android:fontFamily="@font/proxima_nova_regular"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"/>

</RelativeLayout>